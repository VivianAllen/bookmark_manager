
<!DOCTYPE html>
<html>
  <body>
    <form action='/add_link' method='post'>
      <label for='link_url'>
        URL:
        <input type='text' name='link_url'>
      </label>
      <label for='link_title'>
        Title:
        <input type='text' name='link_title'>
      </label>
      <button type='submit'>Add link</button>
    </form>
    <%= styled_flash %>
    <ul>
      <% @links.each do |link| %>
        <li id="link-<%=link.id%>">
          <a href="<%= link.url %>"><%=link.title%></a>
          <form action='/delete_link' method='post'>
            <input type="hidden" name="id_to_delete" value="<%= link.id %>">
            <button type='submit'>Delete</button>
          </form>
          <form action='/edit_link' method='post'>
            <input type="hidden" name="id_to_edit" value="<%= link.id %>">
            <input type="hidden" name="current_url" value="<%= link.url %>">
            <input type="hidden" name="current_title" value="<%= link.title %>">
            <button type='submit'>Edit</button>
          </form>
        </li>
      <% end %>
    </ul>
  </body>
</html>
